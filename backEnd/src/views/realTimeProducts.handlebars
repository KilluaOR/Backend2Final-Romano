{{#if user}}
{{#if (isAdmin user.role)}}
<h1 class="mb-4">Crear nuevo producto</h1>
<hr>
<div class="products-form">
        <h2 class="h4 mb-3">Crear producto</h2>
        <form id="productForm" class="mb-4">
            <input class="form-control mb-2" name="title" id="title" placeholder="Título" required />

            <input
                class="form-control mb-2"
                name="description"
                id="description"
                placeholder="Descripción"
            />

            <input class="form-control mb-2" name="code" id="code" placeholder="Código" />

            <input
                class="form-control mb-2"
                type="number"
                name="price"
                id="price"
                placeholder="Precio"
                required
            />

            <input
                class="form-control mb-2"
                type="number"
                name="stock"
                id="stock"
                placeholder="Stock"
            />

            <input class="form-control mb-2" name="category" id="category" placeholder="Categoría" />

            <select class="form-control mb-2" name="status" id="status">
                <option value="true">Activo</option>
                <option value="false">Inactivo</option>
            </select>

            <input
                class="form-control mb-2"
                name="thumbnails"
                id="thumbnails"
                placeholder="Thumbnails (separadas por coma)"
            />

            <button class="btn btn-primary" type="submit" onclick="createProduct(event)">Crear producto</button>
        </form>
    </div>
    <hr>
    {{/if}}
    {{/if}}
    <h2 class="h4 mb-3">Lista de productos</h2>
    <div class="products-box">
        {{#each products}}
            <div class="product-card">
                <h3>{{this.title}}</h3>
                <hr>
                <p>Categoria: {{this.category}}</p>
                <p>Descripción: {{this.description}}</p>
                <p>Precio: $ {{this.price}}</p>

                {{#if ../user}}
                {{#if (isAdmin ../user.role)}}
                <button id="button-delete" onclick="deleteProduct('{{this._id}}')">Eliminar</button>
                {{/if}}
                {{/if}}
            </div>
        {{/each}}
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>